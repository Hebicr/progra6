
@{
    ViewBag.Title = "Index";
}

<form id="frmPersona">
    <div class="row">
        <label for="nombre">nombre<span>(requerido)</span></label>
        <input type="text" name="nombre" required id="nombre" min="2" />
    </div>
    <div class="row">
        <label for="apellido">Apellido<span>(requerido)</span></label>
        <input type="text" name="apellido" id="apellido" required min="2" max="8" />
    </div>
    <div class="row">
        <label for="email">Email<span>(requerido)</span></label>
        <input type="email" name="email" id="email" required />
        <input type="submit" class="btn btn-success" value="Login" />
    </div>
    <div class="row">
        <label for="password1">Password<span>(requerido)</span></label>
        <input type="password" name="password1" id="password1" required minlength="2" />
    </div>
    <div class="row">
        <label for="password2">Confirmar Password<span>(requerido)</span></label>
        <input type="password" name="password2" id="password2" equalTo="password1" required minlength="2" />
    </div>
    <div class="row">
        <label for="fecha">Fecha Nacimiento<span>(requerido)</span></label>
        <input type="date" name="fechaN" id="fechaN" required minlength="8" />
    </div>
    <div class="row">
        <input type="submit" class="btn btn-success" value="Login" />
    </div>
</form>

@section scripts{
    <script>
        $("#frmPersona").validate();
    </script>
}

